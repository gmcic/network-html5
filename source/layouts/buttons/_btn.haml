- $click = ((defined? click) ? click: "warning()")

- $label = ((defined? label) ? label: "Warning")

- $icon = ((defined? icon) ? icon: "fa-warning")

- if (defined? disabled) && ((defined? show) && (show != ""))
  %button.btn.btn-circle.btn-default.btn-sm{:type => "button", 'ng': {'click':"#{$click}", 'disabled': "#{disabled}", 'show': "#{show}"}}
    %i.fa{:class => "#{$icon}"}
    #{$label}

- elsif defined? disabled
  %button.btn.btn-circle.btn-default.btn-sm{:type => "button", 'ng': {'click':"#{$click}", 'disabled': "#{disabled}"}}
    %i.fa{:class => "#{$icon}"}
    #{$label}

- elsif ((defined? show) && (show != ""))
  %button.btn.btn-circle.btn-default.btn-sm{:type => "button", 'ng': {'click':"#{$click}", 'show': "#{show}"}}
    %i.fa{:class => "#{$icon}"}
    #{$label}

- else
  %button.btn.btn-circle.btn-default.btn-sm{:type => "button", 'ng': {'click':"#{$click}"}}
    %i.fa{:class => "#{$icon}"}
    #{$label}
