- $keyword = ((defined? keyword) ? keyword : @page_id)

- fields = data["" << @module[$keyword] << "-" << $keyword].fields

- $required = ((defined? required) ? required : 'false')

- $columnName = inputName($keyword, (fields[fieldName] || 'error'))

- $ngModel = inputModel($keyword, (fields[fieldName] || 'error'))

.form-group
  %label.control-label
    #{fieldName}
    - if $required == 'true'
      %span.required *

  - if $required == 'true'
    .input-icon.right
      %i.fa.fa-calendar
      %input.form-control.date-picker{:type => "text", :maxlength => "#{$maxlength}", :required => "#{$required}" ,:name => "#{$columnName}", "ng-model"=>"#{$ngModel}", :readonly => 'true'  }/

  - if $required == 'false'
    .input-icon.right
      %i.fa.fa-calendar
      %input.form-control.date-picker{:type => "text", :maxlength => "#{$maxlength}", :name => "#{$columnName}", "ng-model"=>"#{$ngModel}", :readonly => 'true'  }/

  - if $required == 'true'
    %p.help-block.font-red-thunderbird{"ng-show" => "#{validrequired($keyword, (fields[fieldName] || 'error'))}"} #{fieldName}不能为空.
