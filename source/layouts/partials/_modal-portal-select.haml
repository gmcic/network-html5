.modal-content
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"}
    %h4.modal-title #{@modal_name}

  .modal-body
    %div{:id => "#{@modal_id}_alert"}
    = yield

  .modal-footer
    = partial 'layouts/partials/modal_toolbar', :locals => locals