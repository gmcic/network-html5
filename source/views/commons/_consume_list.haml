-# 寄养/住院期间消费记录
.portlet
  .portlet-title
    .caption
      %i.fa.fa-gift
      总金额:, 总项数:
    .actions
      %a.btn.btn-circle.btn-default.btn-sm{:href => "javascript:;", "ng" => {"click": "productmodal()"}}
        %i.fa.fa-plus
        添加商品与服务

  .portlet-body.portlet-empty
    %table#sample_editable_1.table.table-striped.table-hover.table-bordered
      %thead
        %tr
          %th
            %input.group-checkable{:type => "checkbox"}/
          %th 操作
          %th
          - ['收费名称', '规格', '生产商', '价格', '数量', '单位', '小计'].each do |fieldName|
            %th #{fieldName}

      %tbody
        %tr.odd.gradeX{ "ng-repeat" => @page_id + " in " +@page_id+ "s" }
          %td
            %input.checkboxes{:type => "checkbox", 'ng': {'model': 'selection[' +@page_id+ '.id]', 'change': 'selectChange()'} }/
          %td

          - ['收费名称', '规格', '生产商', '价格', '数量', '单位', '小计'].each do |fieldName|
            %td
              = bind @page_id, (@fields[fieldName] || 'error')
